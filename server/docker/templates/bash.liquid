FROM {{ image }}

{% if dependencies %}
RUN apk add --no-cache {{ dependencies }}
{% endif %}

{{ set_user_and_home_dir }}

COPY --chown=1000:1000 {{ main_file }} .
{% if files %}
{% for file in files %}
COPY --chown=1000:1000 {{ file.path }} ./files/{{ file.path }}
{% endfor %}
{% endif %}

CMD ["bash", "{{  main_file }}"]
